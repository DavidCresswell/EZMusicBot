{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2016",
        "jsx": "preserve",
        "resolveJsonModule": true,
        "outDir": "out",
        "sourceMap": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}
